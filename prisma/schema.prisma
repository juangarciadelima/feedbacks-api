generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum QuestionType {
  OBSERVATION
  RATING
}

enum UserType {
  PARTICIPANT
  ADMIN
}

type QuestionsRatings {
  id                  String       @default(cuid()) @map("_id")
  questionName        String
  rating              Int?
  questionType        QuestionType
  questionDescription String?
  observation         String?
  justification       String?
}

type AvaliationInfo {
  groupTitle    String
  numberOfStars Int
}

model Feedbacks {
  id             String             @id @default(cuid()) @map("_id")
  reviewed       String
  reviewer       String
  date           DateTime           @default(now())
  questions      QuestionsRatings[]
  avaliationInfo AvaliationInfo
}

model Participants {
  id       String   @id @default(cuid()) @map("_id")
  name     String
  email    String
  userType UserType
}

model QuestionsSet {
  id              String      @id @default(cuid()) @map("_id")
  questionSetName String
  questions       Questions[]
  numberOfStars   Int
  activatedSet    Boolean
}

type Questions {
  id                  String       @default(cuid()) @map("_id")
  questionName        String
  questionDescription String?
  questionType        QuestionType
}
