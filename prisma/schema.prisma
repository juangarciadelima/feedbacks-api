generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum QuestionType {
  OBSERVATION
  RATING
}

enum UserType {
  PARTICIPANT
  ADMIN
}

type QuestionsRatings {
  id                  String       @default(cuid()) @map("_id")
  questionName        String
  rating              Int?
  questionType        QuestionType
  questionDescription String?
  observation         String?
  justification       String?
}

model Feedbacks {
  id              String             @id @default(cuid()) @map("_id")
  reviewed        String
  reviewer        String
  date            DateTime           @default(now())
  questions       QuestionsRatings[]
  questionSet     QuestionsSet?      @relation(fields: [questionSetId], references: [id], onDelete: Cascade)
  questionSetId   String
  questionSetName String
}

model Participants {
  id       String   @id @default(cuid()) @map("_id")
  name     String
  email    String
  userType UserType

  @@unique([email, name])
}

model QuestionsSet {
  id              String      @id @default(cuid()) @map("_id")
  questionSetName String
  questions       Questions[]
  numberOfStars   Int
  activatedSet    Boolean
  feedbacks       Feedbacks[]
  writable        Boolean     @default(true)
}

type Questions {
  id                  String       @default(cuid()) @map("_id")
  questionName        String
  questionDescription String?      @default("")
  questionType        QuestionType
}
